<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" app:contentPadding="16dp" android:layout_margin="16dp"
        app:cardCornerRadius="8dp" app:cardElevation="4dp" app:cardBackgroundColor="@color/card_bg"
        tools:showIn="@layout/activity_main">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1">
                <TextView
                        android:text="Mumanya Heri Agape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView2"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimary" android:fontFamily="@font/nunito"/>
                <TextView
                        android:text="Credit Card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView3"
                        android:textSize="12sp"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="47dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/mastercard_logo"
                    android:id="@+id/imageView2"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/linearLayout"
                android:layout_marginTop="24dp">
            <TextView
                    android:text="4859"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView6"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:textStyle="bold" android:fontFamily="@font/fira_mono"
                    app:layout_constraintTop_toBottomOf="@+id/textView12"/>
            <TextView
                    android:text="7896"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView6"
                    android:textAlignment="center" android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView5"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintEnd_toStartOf="@+id/textView9"
                    app:layout_constraintTop_toTopOf="@+id/textView5" android:textStyle="bold"
                    android:fontFamily="@font/fira_mono"/>
            <TextView
                    android:text="5231"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView9"
                    android:textAlignment="center" android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/textView6"
                    app:layout_constraintEnd_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toTopOf="@+id/textView6"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    android:textStyle="bold" android:fontFamily="@font/fira_mono"/>
            <TextView
                    android:text="2706"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView9"
                    app:layout_constraintStart_toEndOf="@+id/textView9"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/textView9"
                    android:textAlignment="textEnd" android:textStyle="bold"
                    android:fontFamily="@font/fira_mono"/>
            <TextView
                    android:text="153"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/fira_mono"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_gravity="center"
                    android:layout_marginEnd="8dp">
                <TextView
                        android:text="VALID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView10"
                        android:textSize="6sp" android:layout_gravity="center|end"/>
                <TextView
                        android:text="THRU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView11"
                        android:textSize="6sp" android:layout_gravity="center|end"/>
            </LinearLayout>
            <TextView
                    android:text="08/20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"
                    android:textColor="@color/colorPrimary" android:layout_gravity="center"
                    android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:textSize="16sp"/>
            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:text="Edit"
                    android:layoutDirection="rtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button"
                    app:icon="@drawable/ic_chevron_right_black_24dp" android:textSize="12sp"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>